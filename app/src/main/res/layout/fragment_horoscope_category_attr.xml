<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/cpv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        CircleProgressView:cpv_barWidth="8dp"
        CircleProgressView:cpv_textSize="20sp"
        CircleProgressView:cpv_rimWidth="8dp"
        CircleProgressView:cpv_maxValue="10"
        CircleProgressView:cpv_textMode="Value"
        CircleProgressView:cpv_value="0"
        CircleProgressView:cpv_barColor="@color/colorAccent"
        CircleProgressView:cpv_barColor1="@color/colorPrimaryDark"
        CircleProgressView:cpv_contourColor="#00000000"
        CircleProgressView:cpv_rimColor="#E8EAF6"/>

    <TextView
        android:id="@+id/attribute_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/text_margin"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>
